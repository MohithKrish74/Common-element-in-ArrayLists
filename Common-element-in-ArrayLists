package com.company;

import java.util.*;

public class Main
{
    public static void main(String[] args)
    {
        Scanner in =new Scanner(System.in);
        System.out.print("Enter the size of the array 1: ");
        int size=in.nextInt();
        ArrayList<Integer>list1=new ArrayList<Integer>();
        System.out.println("Enter the elements: ");
        for(int i=0;i<size;i++)
        {
            int element=in.nextInt();
            list1.add(element);
        }
        System.out.println("User entered list1 "+list1);
        System.out.print("Enter the size of the array 2: ");
        int sizes=in.nextInt();
        ArrayList<Integer>list2=new ArrayList<Integer>();
        System.out.println("Enter the elements: ");
        for(int i=0;i<sizes;i++)
        {
            int element=in.nextInt();
            list2.add(element);
        }
        System.out.print("Common elements in the  lists are: ");
        for(int k:list1)
            if(list2.contains(k))
            {
                System.out.print(k +" ");
            }
    }
}







